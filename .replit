modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "freetype", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "rustc", "tcl", "tk", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Code Editor Only"

[[workflows.workflow]]
name = "Code Editor Only"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"FunPay Cardinal Bot - Code editor mode. Bot runs on Render only. Project: $(pwd)\" && sleep infinity"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80
